<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"  xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/convert_comments"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        >

        <ImageView
            android:id="@+id/convert_comments_img"
            android:layout_width="48dp"
            android:layout_height="48dp"

            />

        <TextView
            android:id="@+id/convert_comments_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/convert_comments_like_container"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/convert_comments_like_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/unliked"
            />

        <TextView
            android:id="@+id/convert_comments_like_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            tools:text=" : 21"
            />
    </LinearLayout>

</LinearLayout>