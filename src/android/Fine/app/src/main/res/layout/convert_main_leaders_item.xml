<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/convert_main_leaders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!--               -->
    <!-- regular item  -->
    <!--               -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/convert_main_leaders_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/convert_main_leaders_item_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/convert_main_leaders_item_vg_title_subtitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            >

            <TextView
                android:id="@+id/convert_main_leaders_item_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="title"
                />

            <TextView
                android:id="@+id/convert_main_leaders_item_txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="subtitle"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/convert_main_leaders_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black"
            tools:text="10000" />

        <TextView
            android:id="@+id/convert_main_leaders_follow"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/follow"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />

    </LinearLayout>


    <!--               -->
    <!-- header item   -->
    <!--               -->
    <FrameLayout
        android:id="@+id/convert_main_leaders_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="12dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/convert_main_leaders_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/leaderboard"
            />

    </FrameLayout>


</FrameLayout>